{
	"useTabs": true,
	"tabWidth": 4,
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"quoteProps": "consistent",
	"singleQuote": true,
	"trailingComma": "none",
	"plugins": ["./cockpit/node_modules/prettier-plugin-svelte"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": ["**/*.yaml", "**/*.yml"],
			"options": {
				"tabWidth": 2
			}
		}
	]
}
